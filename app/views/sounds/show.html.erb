<div class="container">
  <div class="large-6 columns text">
    <h4>Code</h4>
    <%= text_area(:sound, :code, cols:20, rows: 20, id: "codeText")%>
  </div>
  <div class="large-6 columns text">
    <h4>Description</h4>
    <%= text_area(:sound, :description, cols:20, rows: 20, id: "descriptionText")%>
  </div>

  <div class="buttons">
    <%= render 'buttons' %>
  </div>

  <div id="saveModal" class="reveal-modal" data-reveal>
    <% if current_user == @sound.user %>
      <%= render 'save' %>
    <% else %>
      <% @sound = Sound.new %>
      <%= render 'save' %>
    <% end %>
  </div>
</div>
<script>
  function playCode(){
    window.cmCode.save();
    var code = $("#codeText").val();
    console.log(code);
    eval(code);
  }

  function stopCode(){
    T.pause();
  }
</script>

