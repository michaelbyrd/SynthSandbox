<%= form_for @sound do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label "Would you like other users to be able to see your code?" %>
  <%= f.check_box :public %>
  <% if current_user %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  <%= f.hidden_field :code %>
  <%= f.hidden_field :description %>
  <%= f.submit 'Save', class: 'button tiny save-button' %>
<% end %>

<script>
  function save(){
    var c = $("#codeText").val();
    $("#sound_code").val(c);
    var d = $("#descriptionText").val();
    $("#sound_description").val(d);
  }
</script>
